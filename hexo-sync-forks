#!/usr/bin/env bash

# make cygwin bin as priority
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:$PATH";

(set -o igncr) 2>/dev/null && set -o igncr; # cygwin encoding fix

# absolute path working directory
basecwd=${PWD}
# base script directory
basedir=`dirname "$0"`
# absolute path script directory
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

case `uname` in
  *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac


yarn workspace hexo exec "git remote add fork https://github.com/hexojs/hexo"
yarn workspace hexo-front-matter exec "git remote add fork https://github.com/hexojs/hexo-front-matter"
yarn workspace warehouse exec "git remote add fork https://github.com/hexojs/warehouse"
yarn workspace hexo-asset-link exec "git remote add fork https://github.com/liolok/hexo-asset-link.git"