{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test*",
    "**/*.spec*.ts",
    "**/*.test*.ts"
  ]
}