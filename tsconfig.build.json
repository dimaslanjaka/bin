{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "outDir": "lib",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}