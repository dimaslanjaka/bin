{
  "$schema": "https://cdn.jsdelivr.net/npm/tsup/schema.json",
  "outDir": "lib",
  "entry": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test*",
    "**/*.spec*.ts",
    "**/*.test*.ts"
  ],
  "target": "node14",
  "format": [
    "cjs",
    "esm"
  ],
  "dts": true,
  "clean": true,
  "shims": true,
  "tsconfig": "tsconfig.build.json"
}